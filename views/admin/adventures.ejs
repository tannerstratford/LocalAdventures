<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/adventure.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (advens.length > 0) { %>
                    <div class="grid">
                        <% for (let adventure of advens) { %>
                            <article class="card adventure-item">
                                <header class="card__header">
                                    <h1 class="adventure__title">
                                        <%= adventure.title %>
                                    </h1>
                                </header>
                                <div class="card__image">
                                    <img src="<%= adventure.imageUrl %>" alt="<%= adventure.title %>">
                                </div>
                                
                                <div class="card__actions"><a href="/admin/edit-adventure/<%= adventure._id %>?edit=true" class="btn">Edit</a>
                                    
                                    <form action="/admin/delete-adventure" method="POST">
                                        <input type="hidden" value="<%= adventure._id %>" name="adventureId">
                                        <input type="hidden" name= "_csrf" value = "<%= csrfToken %>">
                                        <button class="btn danger" type="submit">Delete</button>
                                    </form>
                                    <div class="card__actions">
                                        <a href="/adventures/<%= adventure._id %>" class="btn">Details</a>
                                        
                                    </div>

                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Adventures Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>