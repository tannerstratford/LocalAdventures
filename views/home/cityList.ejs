<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/adventure.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main class = "centered">
            <% if (adventures.length > 0) { %>
                <% console.log("These are my adventures: ", adventures) %>
                
                <div class = "grid">
                    <% adventures.forEach(p => { %>
                        
                        <div class="centered">
                        <article class = "card adventure-item">
                            <h1><%= p.title %></h1>
                            <div class="card__image">
                                <img src="<%= p.imageUrl %>" alt="<%= p.title %>">
                            </div>
                            <div class="card__actions">
                                <a href="/adventures/<%= p._id %>" class="btn">Details</a>
                                <% if(isAuthenticated) { %>
                                    <%- include('../includes/add-to-ToDo.ejs', {adventure: p}) %>
                                <% } %>
                            </div>
                        </article>
                        </div>
                        
                        
                    <% }) %>
                </div>
                
                <hr>
                
                
                
            <% } else { %>
                <h1>No Adventures Recorded In Your City</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>